{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "customConditions": [
      "browser"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "es2022",
      "DOM.Iterable"
    ],
    "module": "es2022",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "target": "es2022",
    "paths": {
      "@elgato/streamdeck": ["node_modules/@elgato/streamdeck/dist/browser.d.ts"]
    }
  },
  "include": [
    "./**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}